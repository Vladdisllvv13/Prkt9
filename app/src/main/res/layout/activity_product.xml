        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#BBF4E3"
        android:text="Введите свое имя"
        android:textAllCaps="false"
        android:textColor="#868686"
